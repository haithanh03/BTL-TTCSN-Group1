<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- Use bootrap library  -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
   <!-- Css for login.html page   -->
    <link href="/css/login.css" rel="stylesheet"></link>
    </style>
</head>
<script>
    function validateForm() {
      var inputs = document.getElementsByClassName("transparent-input");
      var isEmpty = false;
      
      for (var i = 0; i < inputs.length; i++) {
        if (inputs[i].value === "") {
          isEmpty = true;
          break;
        }
      }
      
      if (isEmpty) {
        alert("Vui lòng điền đầy đủ thông tin!");
        return false;
      }
    }
  </script>
  
<script>
    function validateForm() {
        var password = document.querySelector('#password').value;
        var repeatPassword = document.querySelector('#repeatPassword').value;
        
        if (password !== repeatPassword) {
            alert("Password and Repeat Password do not match.");
            return false; // Prevent form submission
        }
        
        // Passwords match, continue with form submission
        return true;
    }
</script>
<body>

    <div class="login-page">
        <div class="form">
            <strong style="color:#fff;font-size:2em; text-align:center">Register</strong>
            <br>
            <form class="login-form" action="/register" method="post" onsubmit="return validateForm()">
                <div class="inputbox">
                    <input type="text" placeholder="email address" id='name' name='email' class="transparent-input"/><ion-icon name="mail-outline"></ion-icon>
                </div>
                <div class="inputbox">
                    <input type="password" placeholder="password" name='password' id="password" required class="transparent-input"/><ion-icon name="lock-closed-outline"></ion-icon>
                </div>
                <div class="inputbox">
                    <input type="password" placeholder="repeatPassword" name='Password' id="repeatPassword" required class="transparent-input"/><ion-icon name="lock-closed-outline"></ion-icon>
                </div>
                <button type="submit" onclick="return validateForm()">create</button>
                <p class="message">Already registered? <a href="http://localhost:3000/login">Sign In</a></p>
            </form>

        </div>
    </div>
</body>
